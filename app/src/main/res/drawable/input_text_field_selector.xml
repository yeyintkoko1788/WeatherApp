<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:color="@color/white" android:state_checked="false" android:state_selected="false" />-->
    <!--<item android:color="@color/colorPrimaryDark" android:state_checked="true" android:state_selected="true" />-->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="50dp" />
            <size android:width="60dp" android:height="40dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/colorSupportDark" />

        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <corners android:radius="50dp" />
            <size android:width="60dp" android:height="40dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />

        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <corners android:radius="50dp" />
            <size android:width="60dp" android:height="40dp" />
            <solid android:color="@color/colorSupportLight" />
            <stroke android:width="1dp" android:color="@color/colorSupportDark" />

        </shape>
    </item>


</selector>