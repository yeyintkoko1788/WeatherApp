    <style name="PrimaryButtonStyle" parent="MediumN">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/standard_button_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/button_start_end_padding</item>
        <item name="android:paddingEnd">@dimen/button_start_end_padding</item>
        <item name="android:paddingTop">@dimen/button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/button_top_bottom_padding</item>
    </style>

    <style name="SecondaryButtonStyle" parent="MediumN">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">@dimen/standard_button_size</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/button_start_end_padding</item>
        <item name="android:paddingEnd">@dimen/button_start_end_padding</item>
        <item name="android:paddingTop">@dimen/button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/button_top_bottom_padding</item>
    </style>

    <style name="LoginTextInputEditTextStyle">
        <item name="android:textAppearance">@style/LightN</item>
        <item name="android:textColor">@color/neutral700</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLength">50</item>
        <item name="android:background">@drawable/input_text_field_selector</item>
        <item name="android:paddingStart">@dimen/margin_xlarge</item>
        <item name="android:paddingEnd">@dimen/margin_xlarge</item>
        <item name="android:paddingTop">@dimen/margin_3xSmall</item>
        <item name="android:paddingBottom">@dimen/margin_3xSmall</item>
    </style>

    <style name="LoginTextFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_login_input_border</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/colorSupportLight</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/BoldN</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

    <dimen name="standard_button_size">48dp</dimen>
